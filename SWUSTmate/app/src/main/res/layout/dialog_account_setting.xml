<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/icon_settingw"
                android:layout_width="44dp"
                android:layout_height="44dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/display_dialog_account_setting_title"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="55dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <ImageView
                android:layout_alignParentBottom="true"
                android:background="#ddffffff"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/accountSettingList"
            android:divider="#ddffffff"
            android:dividerHeight="0.2dp"
            android:footerDividersEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>
        
        <Button
            android:id="@+id/accountSettingCancel"
            android:text="@string/display_dialog_cancel"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </LinearLayout>
</RelativeLayout>